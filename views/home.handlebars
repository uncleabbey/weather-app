<header class="header">
    <div class="logo">
      <img src="/images/full_moon.svg" alt="">
      <h4 class="title">Weather App</h4>
    </div>
    <span class="day">{{getDay}}</span>
    {{!-- <form action="" method="post">
        <input type="text" placeholder="Search weather by city....." id="search" class="form-control">
    </form> --}}
    <form action="/" method="post" id="form">
      <input 
        id="searchTextField" 
        name="searchTextField"
        type="text" 
        placeholder="Enter a location" 
        autocomplete="on" 
        runat="server"
        class="form-control"
      />  
      <input type="hidden" id="city2" name="city2" />
      <input type="hidden" id="cityLat" name="cityLat" />
      <input type="hidden" id="cityLng" name="cityLng" />
    </form>
</header>

<main>
  <section class="display-weather">
    <div>
    <div class="temp-container">
      <h2 class="temp">{{data.main.temp}}Â°</h2>
      {{#if data.weather}}
        {{#each data.weather }}
          <span class="temp-desc">{{this.description}}</span>
        {{/each}}
      {{/if}}
    </div>
    <div class="row">
      <p class="wind-info humidity">
        <span>Humidity</span>
        <span>{{data.main.humidity}}%</span>  
      </p>
      <p class="wind-info wind">
        <span>Wind</span>
        <span>{{data.wind.speed}} k/m</span>
      </p>
    </div>
    </div>
    <div class="name">
      <h4>{{data.name}}</h4>
    </div>
  </section>
</main>